.container {
  margin: 0;
}
.published-item {
  width: 100%;
  background: white;
  margin-bottom: 10rpx;
  display: flex;
}
.published-item-pic {
  width: 150rpx;
  height: 150rpx;
  margin: 20rpx;
}
.published-item-detail {
  flex: 1;
  margin: 20rpx 0;
}
.published-item-detail-title-container {
  font-size: 25rpx;
  color: #888;
}
.published-item-detail-title {
  font-size: 40rpx;
  font-weight: bold;
}
.published-item-detail-type, .published-item-detail-money{
  margin-top: 15rpx;
  color:rgb(255,200,0);
}
.published-item-detail-money {
  color:rgba(255,0,0,0.8);
}
.published-item-detail-other-container {
  font-size: 30rpx;
  margin-right: 20rpx;
}
.icon-jiangpai {
  color:#38CEFE;
  margin-right: 10rpx;
}
.published-item-detail-other-level {
  color:#38CEFE;
  text-align: right;
  margin-bottom: 60rpx;
}
.published-item-detail-other-publishTime {
  display: block;
  color: #888;
  text-align: right;
  font-size: 25rpx;
}