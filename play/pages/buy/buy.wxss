.container {
  margin: 0;
}
.buy-header {
  background: #fff;
  padding: 30rpx;
}
.buy-header-pic {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
}
.buy-header-detail {
  margin-left: 30rpx;
  font-size: 35rpx;
}
.buy-header-detail-name {
  color:#555;
}
.buy-header-detail-money {
  display: block;
  line-height: 25rpx;
  color: red;
  font-size: 30rpx;
}
.buy-main {
  background: #fff;
  margin-top: 20rpx;

}
.buy-main-item {
  border-bottom: 1rpx solid rgba(33,33,33,0.1);
  font-size: 30rpx;
  line-height: 30rpx;
  padding: 20rpx 0;
  margin: 0rpx 30rpx;
  color: #888;
}
.buy-main-item:last-child {
  margin: 0;
  border-bottom: none;
  border-top: 20rpx solid rgba(33,33,33,0.1);
  padding: 20rpx 30rpx;
}
.buy-main-item:nth-child(3) {
  margin: 0 30rpx;
  line-height: 45rpx;
  padding: 15rpx 0;
}
.buy-main-item-num {
  color: #333;
  margin-right: 50rpx;
  line-height: 38rpx;
}
.buy-main-item-all {
  color: #333;
}
.buy-footer-all-money {
  color: red;
}
.buy-main-item-input {
  min-height: 15rpx;
  height: 40rpx;
  text-align: right;
  width: 70%;
}
.buy-footer {
  position: fixed;
  background: #fff;
  bottom: 0;
  width: 100%;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}
.buy-footer-all {
  font-size: 30rpx;
}
.buy-footer-all-money {
  font-size: 40rpx;
  margin-right: 10rpx;
}
.buy-footer-buy {
  font-size: 35rpx;
  background: #38CEFE;
  padding: 10rpx 100rpx;
  border-radius: 30rpx;
  color: #fff;
}