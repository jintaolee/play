.container {
  margin: 20rpx 30rpx;
}
.search-container {
  position: relative;
  display: flex;
}
.icon-sousuo {
  position: absolute;
  top: -5rpx;
  left: 20rpx;
}
.input {
  background: #E1E1E2;
  width: 75%;
  border-radius: 20rpx;
  padding-left: 70rpx;
  box-sizing: border-box;
  font-size: 25rpx;
}
.publish-container {
  margin-left: 40rpx;
}
.icon-fabu {
  color:#38CEFE;
  margin-right: 10rpx;
  position: relative;
  top: -7rpx;
  vertical-align: middle;
}
.pushlish {
  font-size: 30rpx;
  color:#38CEFE;
}
.recommend {
  position: relative;
}
.recommend-border {
  width: 60%;
  height: 80rpx;
  margin: 30rpx auto 20rpx auto;
  display: block;
}
.recommend-title {
  text-align: center;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  font-weight: bold;
  letter-spacing: 5rpx;
  color: #38CEFE;
}
.recommend-container {
  margin-top: 20rpx;
  margin-bottom: 100rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #E1E1E2;
  background: white;
  border-radius: 10rpx;
  display: flex;
  flex-wrap: wrap;
}
.recommend-item {
  width: 50%;
  margin-top: 30rpx;
}
.recommend-item:last-child {
  margin-bottom: 30rpx;
}
.recommend-item:nth-last-child(2) {
  margin-bottom: 30rpx;
}
.recommend-item-pic {
  width: 300rpx;
  height: 300rpx;
}
.icon-huanyihuan {
  position: absolute;
  right: 30rpx;
  top: 28rpx;
  font-size: 40rpx;
  color: #38CEFE;
  padding: 20rpx;
  display: block;
}