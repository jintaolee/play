.container {
  margin: 30rpx;
  border-radius: 20rpx;
  background: white;
}
.message {
  width: 100%;
  padding: 10rpx 20rpx;
  color: #888;
  overflow: auto;
  font-size: 35rpx;
  box-sizing: border-box;
}
.message-clear {
  float: right;
  width: 20%;
  text-align: center;
}
.message-item {
  border-bottom: 1rpx solid rgba(33,33,33,0.1);
  padding: 20rpx;
  font-size: 30rpx;
  color: #888;
}
.message-pic {
  width: 80rpx;
  height: 80rpx;
  background: #ccc;
  margin-right: 30rpx;
  border-radius: 10rpx;
}
.message-user {
  color: black;
  width: 15%;
  text-overflow: ellipsis;
  overflow: hidden;
}
.message-type {
  color: #38CEFE;
}
.message-time {
  flex: 1;
  text-align: right;
  font-size: 25rpx;
}