.user-detail-header-pic-container {
  width: 100%;
  position: relative;
}
.user-detail-header-pic {
  width: 100%;
}
.user-detail-header-fans {
  position: absolute;
  z-index: 100;
  right: 20rpx;
  bottom: 100rpx;
  font-size: 30rpx;
  color: white;
}
.user-detail-main {
  position: relative;
  z-index: 99;
  background: white;
  border-radius: 30rpx;
  top: -60rpx;
  box-shadow: 0 -80rpx 100rpx rgba(0,0,0,0.3);
  padding: 30rpx;
  box-sizing: border-box;
}
.user-detail-main-header {
  border-bottom: 1rpx solid #E1E1E2;
  padding-bottom: 10rpx;
}
.user-detail-main-header-nameContainer {
  font-size: 35rpx;
}
.user-detail-main-header-nameContainer-name {
  line-height: 60rpx;
}
.user-detail-main-header-nameContainer-name .icon-V{
  font-size: 40rpx;
  color: rgb(255,200,0);
  position: relative;
  top: 5rpx;
  left: 10rpx;
}
.user-detail-main-header-nameContainer-operator {
  flex: 1;
}
.user-detail-main-header-nameContainer-collect {
  width: 30%;
  float: right;
  margin-right: 20rpx;
  background: #38CEFE;
  border-radius: 30rpx;
  color: white;
  padding: 10rpx 30rpx;
  font-size: 30rpx;
  text-align: center;
  letter-spacing: 5rpx;
}
.concerned {
  background: rgb(221, 80, 68);
}
.user-detail-main-header-city {
  font-size: 25rpx;
  color: #888;
}
.user-detail-main-main {
  margin-top: 10rpx;
  height: 1000rpx;
}
.user-detail-main-main-bigTitle {
  font-weight: bold;
}
.user-detail-main-main-title {
  margin-top: 30rpx;
  font-size: 30rpx;
  color: #333;
}
.user-detail-main-main-attest {
  margin-top: 20rpx;
  width: 55%;
}
.user-detail-main-main-attest-item {
  background: rgba(0,0,255,0.1);
  border-radius: 50rpx;
  font-size: 25rpx;
  padding: 0 20rpx;
  color: rgb(0,150,255);
  line-height: 60rpx;
}
.user-detail-main-main-attest-item .iconfont {
  vertical-align: middle;
}
.user-detail-main-main-attest-item-text {
  vertical-align: middle;
  line-height: 60rpx;
  margin-left: 10rpx;
}
.user-detail-main-main-detail {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}