.container {
  margin: 30rpx;
}
.section {
  position: relative;
  font-size: 35rpx;
  margin-bottom: 20rpx;
}
.section__title {
  color: #555;
  font-weight: bold;
  margin-bottom: 20rpx;
}
.section .picker {
  color: #888;
  font-size: 30rpx;
  margin: 0 auto;
  background: white;
  border-radius: 20rpx;
  padding: 20rpx 0;
}
.publish-game {
  display: block;
  width: 33%;
  margin: 0 auto;
}
.publish-game-item-title,.publish-game-item-name {
  display: block;
  text-align: center;
}
.publish-game-item-name {
  margin-top: 20rpx;
  font-size: 35rpx;
  color: #38CEFE;
  font-weight: bold;
}
.publish-detail {
  margin: 0 auto;
  background: white;
  padding: 30rpx;
  line-height: 50rpx;
}
.publish-publish {
  margin: 50rpx auto;
  width: 90%;
  background: white;
  border-radius: 20rpx;
  text-align: center;
  font-size: 30rpx;
  color: #FA5735;
  box-shadow: 5rpx 5rpx 10rpx white;
  padding: 10rpx 0;
  font-weight: bold;
}
.section .clear {
  position: absolute;
  right: 60rpx;
  bottom: 30rpx;
  font-size: 60rpx;
  z-index: 99;
}